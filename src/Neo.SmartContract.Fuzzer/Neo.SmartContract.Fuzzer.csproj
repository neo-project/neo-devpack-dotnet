<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <Description>A fuzzing framework for Neo smart contracts</Description>
    <PackageId>Neo.SmartContract.Fuzzer</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Z3" Version="4.12.2" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Neo.BlockchainToolkit" Version="[3.6.94,)" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.8.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.0.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration.CommandLine" Version="9.0.1" />
  </ItemGroup>

  <!-- Templates directory has been removed as it contained smart contract templates -->
  <!-- The fuzzer should only focus on testing existing contracts, not generating them -->

  <ItemGroup>
    <ProjectReference Include="..\..\neo\src\Neo.VM\Neo.VM.csproj" />
    <ProjectReference Include="..\..\neo\src\Neo\Neo.csproj" />
    <ProjectReference Include="..\Neo.SmartContract.Framework\Neo.SmartContract.Framework.csproj" />
  </ItemGroup>

</Project>
