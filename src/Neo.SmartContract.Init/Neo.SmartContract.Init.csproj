<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>neo-init</ToolCommandName>
    <PackageId>Neo.SmartContract.Init</PackageId>
    <RootNamespace>Neo.SmartContract.Init</RootNamespace>
    <AssemblyName>Neo.SmartContract.Init</AssemblyName>
    <Version>1.0.0</Version>
    <Authors>The Neo Project</Authors>
    <Description>CLI tool for initializing NEO smart contract projects</Description>
    <PackageProjectUrl>https://github.com/neo-project/neo-devpack-dotnet</PackageProjectUrl>
    <RepositoryUrl>https://github.com/neo-project/neo-devpack-dotnet</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
    <PackageReference Include="Spectre.Console" Version="0.48.0" />
  </ItemGroup>

  <!-- Templates are currently embedded in TemplateService.cs -->
  <!-- Future: Move to external files as embedded resources -->
  <!--
  <ItemGroup>
    <EmbeddedResource Include="Templates/**/*" />
  </ItemGroup>
  -->

</Project>