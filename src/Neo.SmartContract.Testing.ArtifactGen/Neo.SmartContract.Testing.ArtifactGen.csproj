<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <RootNamespace>Neo.SmartContract.Testing.ArtifactGen</RootNamespace>
    <AssemblyName>neo-artifact-gen</AssemblyName>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>neo-artifact-gen</ToolCommandName>
    <PackageId>Neo.SmartContract.Testing.ArtifactGen</PackageId>
    <Description>CLI tool to generate testing artifacts from compiled NEO smart contracts</Description>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Neo.SmartContract.Testing\Neo.SmartContract.Testing.csproj" />
  </ItemGroup>

</Project>
