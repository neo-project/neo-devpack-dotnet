<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="Moq" Version="4.20.70" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\src\Neo.Compiler.CSharp\Neo.Compiler.CSharp.csproj" />
		<ProjectReference Include="..\..\src\Neo.SmartContract.Framework\Neo.SmartContract.Framework.csproj">
			<Aliases>scfx</Aliases>
		</ProjectReference>
	</ItemGroup>

	<ItemGroup>
	  <Reference Include="Neo.SmartContract.Testing">
	    <HintPath>Neo.SmartContract.Testing.dll</HintPath>
	  </Reference>
	</ItemGroup>

	<Target Name="PreBuild" BeforeTargets="PreBuildEvent">
		<Message Text="Create and compile Nep17Contract.cs" Importance="high">
		</Message>
		<Exec Command="dotnet pack &quot;$(SolutionDir)src/Neo.SmartContract.Template/Neo.SmartContract.Template.csproj&quot;" />
		<Exec Command="dotnet new install &quot;$(SolutionDir)src/Neo.SmartContract.Template/bin/Debug/Neo.SmartContract.Template.3.6.2.nupkg&quot;" />
		<Exec Command="dotnet new neocontractnep17 -n utNep17 -o &quot;$(SolutionDir)src/Neo.SmartContract.Template/bin/Debug/&quot;" />
		<Exec Command="dotnet new uninstall Neo.SmartContract.Template"/>
		<Exec Command="dotnet $(TargetDir)nccs.dll $(NullableArgument) $(CheckedArgument) $(DebugArgument) &quot;$(SolutionDir)src/Neo.SmartContract.Template/bin/Debug/utNep17.csproj&quot;" />
	</Target>

</Project>
