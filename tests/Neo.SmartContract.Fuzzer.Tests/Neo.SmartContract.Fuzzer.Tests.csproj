<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <RootNamespace>Neo.SmartContract.Fuzzer.Tests</RootNamespace>
    <!-- Remove implicit compile -->
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Z3" Version="4.12.2" />
    <PackageReference Include="Moq" Version="4.20.70" />
    <PackageReference Include="FluentAssertions" Version="6.12.0" />
    <PackageReference Include="MSTest.TestAdapter" Version="3.8.0" />
    <PackageReference Include="MSTest.TestFramework" Version="3.8.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.13.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Neo.SmartContract.Fuzzer\Neo.SmartContract.Fuzzer.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="TestData\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <!-- Explicitly include test files -->
  <ItemGroup>
    <Compile Include="SymbolicExecutionEngineIntegrationTests.cs" />
    <Compile Include="NeoParameterGeneratorTests.cs" />
    <Compile Include="NeoSymbolicExecutionTests.cs" />
    <Compile Include="TestHelpers.cs" />
    <Compile Include="TestExecutionStep.cs" />
    <!-- New vulnerability detector tests -->
    <Compile Include="Detectors\TokenImplementationDetectorTests.cs" />
    <Compile Include="Detectors\IntegerOverflowDetectorTests.cs" />
    <Compile Include="Detectors\ReentrancyDetectorTests.cs" />
    <Compile Include="Detectors\UnauthorizedAccessDetectorTests.cs" />
    <Compile Include="Detectors\StorageManipulationDetectorTests.cs" />
    <Compile Include="Detectors\NeoNativeContractDetectorTests.cs" />
    <Compile Include="Detectors\OracleVulnerabilityDetectorTests.cs" />
    <Compile Include="SymbolicExecution\VulnerabilityDetectionIntegrationTests.cs" />
  </ItemGroup>

</Project>
